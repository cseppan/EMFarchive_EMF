<?xml version="1.0"?>
<project name="EMF" default="all" basedir=".">

	<!-- utilize predefined environment variables -->
	<property name="env" environment="env" value="env" />
	<property name="J2EE_HOME" value="${env.J2EE_HOME}" />
	<property name="JAVA_HOME" value="${env.JAVA_HOME}" />
	<property name="src.dir" value="src" />
	<property name="unittest.dir" value="test/unit" />
	<property name="build.dir" value="build" />
	<property name="classes.dir" value="${build.dir}/classes" />
	<property name="lib.dir" value="lib" />
	<property name="reports.test" value="${build.dir}/reports/test" />

	<!-- Create the class path -->
	<path id="classpath">
		<pathelement location="${classes.dir}" />
		<fileset dir="${lib.dir}">
			<include name="**/*.jar" />
		</fileset>
	</path>

	<!-- basic targets -->
	<target name="init" depends="clean">
		<mkdir dir="${build.dir}" />
		<mkdir dir="${classes.dir}" />
		<mkdir dir="${reports.test}" />
	</target>

	<target name="clean">
		<delete dir="${reports.test}" />
		<delete dir="${classes.dir}" />
		<delete dir="${build.dir}" />
	</target>

	<target name="compile" depends="init">
		<javac srcdir="${src.dir}" destdir="${classes.dir}" classpathref="classpath" debug="on" />
		<javac srcdir="${unittest.dir}" destdir="${classes.dir}" classpathref="classpath" debug="on" />
	</target>

	<target name="test" depends="compile">
		<junit printsummary="yes" haltonfailure="yes">
			<classpath refid="classpath" />
			<formatter type="xml" />

			<batchtest fork="yes" todir="${reports.test}">
				<fileset dir="${unittest.dir}">
					<include name="**/*Test*.java" />
				</fileset>
			</batchtest>
		</junit>
	</target>

	<target name="all" depends="compile, test" />

	<!-- CVS targets -->
	<target name="cvs-properties-load">
		<property file=".cvs"/>
	</target>
    <target name="cvs-username-check" depends="cvs-properties-load" unless="cvs.username">
        <echo message="Please create a .cvs file in your project home directory w/ the following properties:"/>
        <echo message="username='cvs username'"/>
    </target>
        
	<target name="cvs-update" depends="cvs-username-check" if="cvs.username">
		<cvs command="update" cvsroot=":pserver:${cvs.username}@cvs.sourceforge.net:/cvsroot/emisview" quiet="yes" reallyquiet="yes" failonerror="yes" />
		<echo message="EMF update is complete." />
	</target>


	<target name="pre-checkin" depends="cvs-update, compile, test" />
</project>

