<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false"> 
	<class name="gov.epa.emissions.framework.services.cost.ControlMeasure" table="control_measures" schema="emf">
        <id name="id" type="integer" column="id">
            <generator class="identity"/>
        </id>
          
        <property name="name" column="name" type="java.lang.String" not-null="true"/>
        <property name="description" column="description" type="java.lang.String" not-null="false"/>
        <property name="abbreviation" column="abbreviation" type="java.lang.String" not-null="false"/>
        <property name="cmClass" column="cm_class" type="java.lang.String" not-null="false"/>
        <property name="dataSouce" column="data_souce" type="java.lang.String" not-null="false"/>
        <property name="deviceCode" column="device_code" type="integer" not-null="false"/>
        <property name="costYear" column="cost_year" type="integer" not-null="false"/>
        <property name="equipmentLife" column="equipment_life" type="float" not-null="false"/>
        <property name="lockOwner" column="lock_owner" type="java.lang.String" not-null="false"/>
        <property name="lockDate" column="lock_date" type="java.util.Date" not-null="false" length="4"/>
        <property name="lastModifiedTime" column="last_modified_time" type="java.util.Date" not-null="false" length="4"/>
        <property name="dateReviewed" column="date_reviewed" type="java.util.Date" not-null="false" length="4"/>
        
        <many-to-one cascade="save-update"
            name="creator" 
            class="gov.epa.emissions.commons.security.User"
            column="creator"/> 
 
        <many-to-one cascade="save-update"
            name="majorPollutant" 
            class="gov.epa.emissions.commons.data.Pollutant"
            column="major_pollutant"/> 
            
        <many-to-one cascade="save-update"
            name="sourceGroup" 
            class="gov.epa.emissions.commons.data.SourceGroup"
            column="source_group"/> 
            
        <many-to-one cascade="save-update"
            name="controlTechnology" 
            class="gov.epa.emissions.framework.services.cost.data.ControlTechnology"
            column="control_technology"/> 
            
       <array name="sccs" table="control_measure_sccs" >
    		<key column="control_measures_id" not-null="true"/>
	    	<list-index column="list_index"/>
	    	 <composite-element class="gov.epa.emissions.framework.services.cost.controlmeasure.Scc">
				<property name="code" column="name" type="string" not-null="true"/>
				<property name="status" column="status" type="string" not-null="false"/>
			</composite-element>
	   </array>

 	   <array name="efficiencyRecords" table="control_measure_efficiencyrecords" cascade="save-update">
      		<key column="control_measures_id" not-null="true"/>
      		<list-index column="list_index"/>
		    <composite-element class="gov.epa.emissions.framework.services.cost.data.EfficiencyRecord">
			<many-to-one cascade="save-update"
                 name="pollutant" 
             	 class="gov.epa.emissions.commons.data.Pollutant"
             	 column="pollutant_id"/> 
				<property name="existingMeasureAbbr" column="existing_measure_abbr" type="java.lang.String" not-null="false"/>
				<property name="existingDevCode" column="existing_dev_code" type="integer" not-null="false"/>
				<property name="locale" column="locale" type="java.lang.String" not-null="false"/>
        		<property name="efficiency" column="efficiency" type="float" not-null="false"/>
        		<property name="costYear" column="cost_year" type="integer" not-null="false"/>
        		<property name="costPerTon" column="cost_per_ton" type="float" not-null="false"/>
        	    <property name="ruleEffectiveness" column="rule_effectiveness" type="float" not-null="false"/>
                <property name="rulePenetration" column="rule_penetration" type="float" not-null="false"/>
                <property name="equationType" column="equation_type" type="java.lang.String" not-null="false"/>
                <property name="capRecFactor" column="cap_rec_factor" type="float" not-null="false"/>
                <property name="discountRate" column="discount_rate" type="float" not-null="false"/>
                <property name="detail" column="detail" type="java.lang.String" not-null="false"/>
                <property name="effectiveDate" column="effective_date" type="java.util.Date" not-null="false" length="4"/>
      		</composite-element>
 	   </array>
 	   
 	   <array name="sectors" table="control_measurs_sectors" cascade="save-update">
    		<key column="control_measure_id" not-null="true"/>
    		<list-index column="list_index"/>
    		<many-to-many class="gov.epa.emissions.commons.data.Sector" column="sector_id"/>
  	   </array>
            
    </class>
</hibernate-mapping>  

