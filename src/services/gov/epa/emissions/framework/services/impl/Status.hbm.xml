<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping> 
  <class name="gov.epa.emissions.framework.services.Status" table="statusmessages"> 
 	<id name="statusid" type="long" column="status_id">
	  <generator class="identity"/>
 	</id>
	<property name="userName"		column="user_name"	type="java.lang.String"		not-null="true"		length="15"/>
	<property name="messageType" 	column="msg_type"	type="java.lang.String"		not-null="true" 	length="255"/>
	<property name="message" 		column="message"	type="java.lang.String"		not-null="true"/>
	<property name="timestamp" 		column="date"		type="java.util.Date"		not-null="true" 	length="10"/>
    <property name="msgRead" 		column="msg_read"	type="boolean"				not-null="true"/>
  </class> 
</hibernate-mapping>  

