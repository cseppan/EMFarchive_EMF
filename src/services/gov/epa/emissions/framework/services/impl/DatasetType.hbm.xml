<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="gov.epa.emissions.commons.io.DatasetType" table="emf.datasettypes">
 	<id name="datasettypeid" type="long" column="dataset_type_id">
	  <generator class="identity"/>
 	</id>
	<property name="name"			column="name"			type="java.lang.String"	not-null="true"	length="255"/>
	<property name="description"	column="description" 	type="java.lang.String"	not-null="true"/>
	<property name="minfiles"		column="minfiles" 		type="integer"			not-null="true"	length="4"/>
	<property name="maxfiles"		column="maxfiles" 		type="integer"			not-null="true"	length="4"/>
	<property name="minColumns"		column="min_columns" 	type="integer"			not-null="true"	length="4"/>
	<property name="maxColumns"		column="max_columns" 	type="integer"			not-null="true"	length="4"/>
	<property name="external"		column="external" 	    type="boolean"			not-null="true"	length="4"/>
	
	<array name="keywords" table="dataset_types_keywords" cascade="save-update">
      <key column="dataset_type_id" not-null="true"/>
      <list-index column="list_index"/>
	  <many-to-many class="gov.epa.emissions.commons.io.Keyword" column="keyword_id"/>
  	</array>
	
  </class> 
</hibernate-mapping>
