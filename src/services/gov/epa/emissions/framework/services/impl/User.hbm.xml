<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">
    <class name="gov.epa.emissions.commons.security.User" table="users" schema="emf">
        <id name="id" type="long" column="id">
            <generator class="identity"/>
        </id>
        <property name="username" column="user_name" type="java.lang.String" not-null="true" length="255"/>
        <property name="encryptedPassword" column="user_pass" type="java.lang.String" not-null="true" length="255"/>
        <property name="fullName" column="fullname" type="java.lang.String" not-null="true" length="255"/>
        <property name="affiliation" column="affiliation" type="java.lang.String" not-null="true" length="255"/>
        <property name="phone" column="workphone" type="java.lang.String" not-null="true" length="15"/>
        <property name="email" column="emailaddr" type="java.lang.String" not-null="true" length="255"/>
        <property name="inAdminGroup" column="inadmingrp" type="boolean"/>
        <property name="acctDisabled" column="acctdisabled" type="boolean"/>
        <property name="lockOwner" column="lock_owner" type="java.lang.String" not-null="false"/>
        <property name="lockDate" column="lock_date" type="java.util.Date" not-null="false" length="4"/>
    </class>
</hibernate-mapping>
