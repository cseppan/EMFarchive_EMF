<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    
    <session-factory>
        
        <!-- Connection -->
        <property name="connection.datasource">java:comp/env/jdbc/EMFDB</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">1800</property>
        
        <!-- Transactions/Cache -->
        <property name="hibernate.transaction.auto_close_session">true</property>
        <property name="hibernate.transaction.flush_before_completion">true</property>

		<!-- Misc -->        
        <property name="show_sql">false</property>
        <property name="hibernate.use_sql_comments">false</property>
        <property name="hibernate.generate_statistics">false</property>

		<!-- Mappings -->
        <mapping resource="gov/epa/emissions/framework/services/impl/Status.hbm.xml"/>
        <mapping resource="gov/epa/emissions/framework/services/impl/Sector.hbm.xml"/>
        <mapping resource="gov/epa/emissions/framework/services/impl/Country.hbm.xml"/>
        <mapping resource="gov/epa/emissions/framework/services/impl/DatasetType.hbm.xml"/>
    	<mapping resource="gov/epa/emissions/framework/services/impl/Dataset.hbm.xml"/>
    	<mapping resource="gov/epa/emissions/framework/services/impl/DatasetAccessLog.hbm.xml"/>    	
    	<mapping resource="gov/epa/emissions/framework/services/impl/EmfProperties.hbm.xml"/>
    	<mapping resource="gov/epa/emissions/framework/services/impl/Keyword.hbm.xml"/>
    
    </session-factory>
    
</hibernate-configuration>
